    <Grid>
        <Grid.Resources>

            <converters:BoleanToVisibilityConverter x:Key="BoleanToVisibilityConverter"/>
        </Grid.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
             Height="*"/>
                <RowDefinition
             Height="2*"/>
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Background="DarkMagenta">
                <TextBlock
                    Foreground="White"
                    FontSize="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Welcome"/>
            </Border>
            <Border
                 MaxWidth="300"
                 Margin="50 10"
                 Grid.Row="1">
                <StackPanel
                    Orientation="Vertical">
                    <Ellipse
                         Margin="8 4"
                         Height="100" 
                         Stroke="Black" 
                         Width="100">
                    </Ellipse>
                    <TextBox
                        materialDesign:HintAssist.Hint="UserName"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="8 4"
                        Text="{Binding UserName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                    </TextBox>
                    <TextBox
                        materialDesign:HintAssist.Hint="Password"
                        Text="{Binding Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="8 4">
                    </TextBox>
                    <Button
                        Visibility="{Binding ShowButton,Converter={StaticResource BoleanToVisibilityConverter}}"
                        Command="{Binding LoginCommand}"
                        Margin="8 4"
                        Content="login">
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
